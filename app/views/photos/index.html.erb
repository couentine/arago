<% @photos.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.reverse_each do |idea| %>
      <div class="col-md-4">
        <%=link_to (image_tag idea.picture_url, width: '100%' if idea.picture.present?), idea %>
        <h4><%= link_to idea.name, idea %></h4>
      </div>
    <% end %>
  </div>
<% end %>

<div class="row">
    <div class="col-md-3 col-sm-12">
        <h1><%=@user.email%></h1>
        <% @user_photos.in_groups_of(3) do |group| %>
          <div class="row">
            <% group.compact.each do |idea| %>
                <div class="col-md-4">
                <%=image_tag idea.picture_url, width: '400%' if idea.picture.present? %>
                <h4><%= link_to idea.name, idea %></h4>
              </div>
            <% end %>
          </div>
          <%end%>

    </div>
    <div class="col-md-9 col-sm-12">
    </div>
</div>
